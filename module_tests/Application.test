%description:
Test Application

%file: test.ned
import modules.Application.Application;
import test.MockRouter;
module MockQNode {
    submodules:
        router: MockRouter {

        }
        app: Application {
            @display("p=170,95");
            TrafficPattern = 0;
            LoneInitiatorAddress = 0;
        }
    connections:
        router.fromApp <-- app.toRouter;
        router.toApp --> app.fromRouter;
}
network ApplicationTestNet
{
    submodules:
        qnode: MockQNode {
            address = 1;
        }
}

%inifile: omnetpp.ini
[General]
network = ApplicationTestNet
cmdenv-express-mode = true
cmdenv-log-prefix = ""

debug-on-errors = false
debugger-attach-on-error = false


%activity:
cPacket *pk = new cPacket();
pk->setName("ACK");
pk->setByteLength(64);
EV << "name: " << pk->getName() << endl;
EV << "length: " << pk->getByteLength() << endl;
delete pk;
